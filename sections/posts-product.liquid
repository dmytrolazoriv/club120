<div class="product-" data-cc-animate>
    <section class="border-top section products-section">
      <div class="container">
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
        <div class="articles-grid row grid one-row" data-normheights=".image" data-normheights-inner="img">

          {%- for article in blogs.news.articles -%}
    <div class="flex column max-cols-4">
    <div class="article-item">
        {%- if article.image -%}
        <div class="article-item-thumb">
            <a href="{{ article.url }}" class="display-block">
            {%- assign article_image_size = 370 | append: 'x' | append: 196 -%}
            <img src="{{ article.image | img_url: article_image_size, crop: 'center' }}" class="article-item-image width-100 lazyload" alt="{{ article.title }}"/>
            <noscript><img src="{{ article.image | img_url: article_image_size, crop: 'center' }}" class="article-item-image width-100" alt="{{ article.title }}"/></noscript>
            </a>
        </div>
        {%- endif -%}
        <div class="article-item-caption">
        <div class="article-item-info">
            <span class="article-item-date">{{ article.published_at | date: '%b %d, %Y' }}</span>
        </div>        
        <h2 class="article-item-title">
            <a href="{{ article.url }}">{{ article.title }}</a>
        </h2>
        </div>
    </div>
    </div>

    {% capture _ %}{% increment i %}{% endcapture %}
    {%- if i == 4 -%}
    {% break %}
    {%- endif -%}
{%- endfor -%}

          
        </div>
      </div>
    </section>
</div>










{% schema %}
{
  "name": "Articles for product",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "caption",
      "label": "Caption"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Articles"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "open_first_collapsible_row",
      "default": false,
      "label": "Open first collapsible row"
    },
    {
      "type": "header",
      "content": "SECTION PADDING"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ]
}
{% endschema %}